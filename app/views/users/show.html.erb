<p id="notice" class="alert alert-success"><%= notice %></p>

<aside class="sidebar">
  <section>
    <span class="label">Icon</span>
    <h3 class="user-info"><%= image_for(@user) %></h3>
  </section>
  
  <section>
    <span class="label">User</span>
    <h3 class="user-info"><%= @user.name %></h3>
  </section>
  
  <section>
    <span class="label">email</span>
    <h3 class="user-info"><%= @user.email %></h3>
  </section>
  
  <div>

      Like <%= link_to @user.likes.count, like_notes_user_path(@user.id) %> posts
   
  </div>

  <% if current_user?(@user) %>
  <section>
    <small><%= link_to 'Edit Profile', edit_user_path(@user) %></small>
  </section>
  <%end%>
</aside>


<ul class="notes">
  <h2><%= @title %></h2>
  <% @notes.each do |note| %>
    <li><%= link_to note.title, note %></li>
  <% end %>
</ul>
